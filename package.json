{
  "name": "sprocket_starter",
  "version": "0.0.1",
  "license": "MIT",
  "source": "client/src/app.ts",
  "targets": {
    "main": false,
    "client": {
      "distDir": "priv/static",
      "sourceMap": false
    }
  },
  "devDependencies": {
    "@parcel/packager-ts": "2.9.2",
    "@parcel/transformer-typescript-types": "2.9.2",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.0.1",
    "jest": "^29.5.0",
    "parcel": "^2.9.2",
    "process": "^0.11.10",
    "tailwindcss": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "client:build": "parcel build client/src/app.ts --target client",
    "client:watch": "parcel client/src/app.ts --no-hmr --dist-dir priv/static",
    "tailwind:build": "npx tailwindcss -i ./app.css -o priv/static/app.css",
    "tailwind:watch": "npx tailwindcss -i ./app.css -o priv/static/app.css --watch",
    "clean": "rm -rf build .parcel-cache priv/static/**",
    "watch": "gleam build && concurrently --kill-others \"gleam run\" \"yarn run client:watch\" \"yarn run tailwind:watch\"",
    "build": "gleam build && yarn run client:build && yarn run tailwind:build"
  },
  "dependencies": {
    "sprocket-js": "^0.1.9"
  }
}